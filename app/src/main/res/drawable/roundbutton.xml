<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <corners android:radius="1000dp" />
        <solid android:color="#e1e2ff" />
        <stroke
            android:width="2dip"
            android:color="#e1e2ff" />
        <padding
            android:bottom="4dp"
            android:left="4dp"
            android:right="4dp"
            android:top="4dp" />
    </shape>
</item>
<item android:state_pressed="true">
<shape android:shape="rectangle">
    <corners android:radius="1000dp" />
    <solid android:color="#706cf5" />
    <stroke
        android:width="2dip"
        android:color="#706cf5" />
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
</shape>
</item>
    </selector>
